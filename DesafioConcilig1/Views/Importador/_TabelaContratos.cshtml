@model List<DesafioConcilig1.Models.Contratos>

@if (Model != null && Model.Any())
{
    foreach (var contrato in Model)
    {
        <tr>
            <td class="align-middle">@contrato.Nome</td>
            <td class="align-middle">@contrato.CPF</td>
            <td class="align-middle">@contrato.Contrato</td>
            <td class="align-middle">@contrato.Produto</td>
            <td class="align-middle">@contrato.Vencimento.ToString("dd/MM/yyyy")</td>
            <td class="align-middle">@contrato.Valor.ToString("N2")</td>
            <td class="align-middle">
                @(contrato.Usuario != null
                    ? contrato.Usuario.NomeUsuario
                    : "—")
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="7" class="text-center py-4">Nenhum contrato importado ainda.</td>
    </tr>
}